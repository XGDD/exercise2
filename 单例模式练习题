package www.java.test;

class Person{
    private String name;
    private int age;
    private int salary;
    private static final Person per = new Person("张三", 20, 1000);

    private Person(){
        System.out.println("hello");
    }

    private Person(String name, int age, int salary) {
        this.name = name;
        this.age = age;
        this.salary = salary;
    }

    public static Person getPer(){
        return per;
    }

    @Override
    public String toString() {
        return "Person{" +
                "name='" + name + '\'' +
                ", age=" + age +
                ", salary=" + salary +
                '}';
    }

    public boolean equals(Person per1, Person per2){
        if(per1.name.equals(per2) && per1.age == per2.age && per1.salary == per2.salary){
            return true;
        }
        return false;
    }
}

public class Test{
    public static void main(String[] args){
        Person p1 = Person.getPer();
        Person p2 = Person.getPer();
        System.out.println(p1.toString());
        System.out.println(p1.equals(p2));
    }
}
